{
  "hosting": {
    "public": "out",
    "target": "staging",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/events",
        "destination": "/events.html"
      },
      {
        "source": "/event/**",
        "destination": "/event/[event].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
